/* pages/index/index.wxss */

/* 搜索开始 */

.index {
  margin: 0;
  padding: 0;
  background: #f5f5f5;
  
}

.search_box {
  display: flex;
  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  background: #fff;
}

.search_box .search {
  border-style: solid;
  border-width: 2rpx;
  border-color: #f84e67;
  border-radius: 10rpx;
  /* margin-left: 30rpx; */
  overflow: hidden;
  flex: 1;
  display: flex;
}

.search_box .search .search_logo {
  float: left;
  /* padding: 14rpx 12rpx 14rpx 30rpx; */
  padding: 14rpx 12rpx 14rpx 30rpx;
  width: 40rpx;
  height: 32rpx;
}

.search_box .search .search_logo image {
  display: block;
  width: 40rpx;
  height: 32rpx;
}

.search_box .search input {
  height: 60rpx;
  width: 100%;
  font-size: 29rpx;
  margin-left: 42rpx;
}

.search_box .search_button {
  width: 100rpx;
  height: 60rpx;
  margin-left: 10rpx;
  /* padding: 0 30rpx 0 10rpx; */
}

.search_box .search_button image {
  width: 100%;
  height: 100%;
}

/* 搜索结束 */

/* 轮播图开始 */

.swiper_box {
  height: 340rpx;
  width: 100%;
  padding-top: 30rpx;
  display: flex;
  justify-content: center;
  background: #fff;
}

.swiper_box swiper {
  background-color: blue;
  height: 100%;
  width: 690rpx;
  border-radius: 7rpx;
}

.swiper_box image {
  width: 100%;
  height: 100%;
}

/* 轮播图结束 */

/* 按钮开始 */

.button_nav {
  display: flex;
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.button_nav .navigator {
  height: 180rpx;
  width: 172.5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}

.button_nav .navigator  .text {
  font-size: 26rpx;
  width: 100%;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(68, 68, 68, 1);
  text-align: center;
}

.button_nav view image {
  width: 84rpx;
  height: 84rpx;
}

.swiper-item 
/* 按钮结束 */

/* 2周年开始 */


.content-box{
  width: 100%;
background: #fff;
}
.content-box view {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;

}

.content-box view image {
  width: 690rpx;
  height: 384rpx;
}

.conts {
  width: 100%;
  box-sizing: border-box;
  padding: 0 10rpx;
  background: #f5f5f5;
}

/* 2周年结束 */

/* 超值拼团开始 */

/* 背景颜色 */

.bgc_color {
  
  margin-top: 20rpx;
  width: 100%;
  border-radius: 10rpx;
}

.geigegao {
  height: 20rpx;
}

.bargain_box {
  width: 730rpx;
  height: 374rpx;
  border-radius: 5rpx;
  background-color: #fff;
}

.bargain_box .bargain_top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 86rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.bargain_box .bargain_top .bargain_left {
  font-size: 26rpx;
  font-weight: 1000;
  color: #666;
}

.bargain_box .bargain_top .bargain_left  .time {
  margin-left: 30rpx;
  color: rgba(240, 43, 80, 1);
}

.bargain_box .bargain_top .bargain_left  .time text {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin: 0 8rpx;
  text-align: center;
  background: rgba(254, 238, 241, 1);
  border-radius: 50%;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(240, 43, 80, 1);
}

.bargain_box .bargain_top .bargain_right {
  font-size: 26rpx;
  /* font-weight: 1000; */
  color: #666;
}

.bargain_box .bargain_top view image {
  height: 30rpx;
  width: 30rpx;
  margin-left: 16rpx;
}

.bargain_box .bargain_top view {
  display: flex;
  justify-content: center;
  align-items: center;
  /* justify-content: space-between; */
}

.bargain_box .bargain_buttom .imgs {
  height: 150rpx;
  width: 150rpx;
}

.bargain_box .bargain_buttom .imgs image {
  height: 100%;
  width: 100%;
}

/* 下 */

.bargain_buttom {
  /* border: 1px red solid; */
  width: 100%;
  height: 276rpx;
  display: flex;
  background: rgba(255, 255, 255, 1);

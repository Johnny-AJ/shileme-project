  top: 0;
  position: absolute;
  color: rgba(240, 43, 80, 1);
}

.bargain_box .bargain_buttom  .price .old {
  font-size: 18rpx;
  font-family: PingFang SC;
  font-weight: 400;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
  right: 0;
  top: 30rpx;
  position: absolute;
}




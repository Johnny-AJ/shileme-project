  justify-content: space-between;
  position: relative;
  margin-top: 16rpx;
}

.bargain_box .bargain_buttom  .text .t1 {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(240, 43, 80, 1);
  background: rgba(240, 43, 80, 0.08);
  padding: 6rpx 10rpx;
  border-radius: 20rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.bargain_box .bargain_buttom  .price .now {
  font-size: 23rpx;

<!-- 首页 -->
<view class="index">

  <!-- 搜索 -->
  <view class="search_box">
    <view class="search">
      <view class="search_logo">
        <image mode="widthFix" src="../../static/imgs/搜索.png"></image>
      </view>
      <input placeholder="搜索" bindtap="search"></input>
    </view>
    <view class="search_button">
      <image src="../../static/imgs/矩形 16 拷贝 5.png"></image>
    </view>


  </view>

  <!-- 轮播图 -->
  <view class="swiper_box">
    <swiper indicator-dots="false" autoplay="false" interval="3000" circular="false">
      <swiper-item wx:for="{{swiperList}}" wx:key='*this'>
        <image mode="widthFix" src="{{item.url}}"></image>
      </swiper-item>
    </swiper>
  </view>


  <!-- 按钮 -->
  <view class="button_nav">

    <view class="navigator" bindtap="handurl">
      <image mode="widthFix" src="../../static/imgs/扫码购.png"></image>
      <view class="text">扫码购</view>
    </view>

    <view class="navigator" bindtap="handurl1" data-url="/pages/free/free">
      <image mode="widthFix" src="../../static/imgs/试用.png"></image>
      <view class="text">免费试用</view>
    </view>

    <view class="navigator" bindtap="handurl1" data-url="/pages/group/group">
      <image mode="widthFix" src="../../static/imgs/拼团.png"></image>
      <view class="text">超值拼团</view>
    </view>

    <view class="navigator" bindtap="handurl1" data-url="/pages/pointsfor/pointsfor">
      <image mode="widthFix" src="../../static/imgs/积分兑换.png"></image>
      <view class="text">积分兑换</view>
    </view>

  </view>
  <!-- 按钮 -->

  <!-- 2周年庆 -->
  <view class="content-box">
    <view>
      <image mode="widthFix" src="../../static/imgs/周年庆.png"></image>
    </view>
  </view>
  <view class="conts">
    <view class="bgc_color">

      <!-- 超值拼团 -->
      <view class="bargain_box">


        <view class="bargain_top">
          <view class="bargain_left">超值拼团</view>
          <view class="bargain_right" bindtap="jump"> 好 友 正 在 拼
            <image src="../../static/imgs/箭头.png"></image>
          </view>
        </view>

        <view class="bargain_buttom">
          <swiper autoplay="false" interval="7000" circular="false">
            <block>
              <swiper-item wx:for="{{buyRollList}}" wx:for-item="i" wx:key="*this" wx:for-index="num" wx:if="{{i.arr.length !==0}}">
                <view class="swiper-item">

                  <view class="swiper-cont" wx:key="*this" wx:for="{{i.arr}}">

                    <view class="imgs">
                      <image src="{{item.waresImg}}"> </image>
                      <view class="text">已拼{{item.joinNum}}件</view>
                    </view>
                    <view class="text">
                      <view class="t1">{{item.groupPeopleNum}}人团</view>
                      <view class="price">
                        <view class="now">￥
                          <text>{{item.depreciateMoney}}</text>
                        </view>
                        <view class="old">
                          ￥
                          <text>{{item.groupBuyMoney}}</text>
                        </view>
                      </view>
                    </view>
                  </view>


                </view>
              </swiper-item>
            </block>
          </swiper>


        </view>
      </view>



      <view class="bgc_color  content">

        <view class="bargain_box">
          <!-- 限时购 -->
          <view class="bargain_top">

            <view class="bargain_left">
              <text>限 时 购</text>
              <view class="time">


                <i-count-down target="{{targetTime}}" countdown-class="targettime" bindcallback="listtime" clear-timer="{{clearTimer}}"></i-count-down>

              </view>
            </view>
            <!-- 右边 -->
            <view class="bargain_right"> 更 多 场 次
              <image src="../../static/imgs/箭头.png"></image>
            </view>
          </view>
          <!-- 下 -->
          <view class="bargain_buttom">
            <view class="a" wx:for="{{timeoutbuylist}}" bindtap="goto" wx:key='*this' data-waresId="{{item. waresId}}">
              <image src="{{item.logoUrl}}"></image>
              <view class="price">
                <text> <text>￥</text>{{item.nowPrice}}</text>
                <text><text>￥</text>{{item.mallPrice}}</text>
              </view>
            </view>




          </view>
        </view>
      </view>
      <view class="hot">
        <view class="hl .p21">
          <view class="tittle" bindtap="jump" data-url="/pages/selling_list/selling_list">
            <view class="imgage">
              <image src="../../static/imgs/bb.png"></image>
            </view>
            <text>剁手必看指南</text>
          </view>
          <view class="imgs">
            <view wx:for="{{realistic}}" wx:key="*this" bindtap="goto" data-waresId="{{item.waresId}}">
              <image src="{{item.logoUrl}}"></image>
            </view>

          </view>
        </view>
        <view class="hr .p21">
          <view class="tittle" bindtap="jump" data-url="/pages/new_product/new_product">
            <image src="../../static/imgs/aaa.png"></image>
            <text>什么值得买</text>
          </view>
          <view class="imgs">
            <view wx:for="{{newselling}}" wx:key="*this"  bindtap="goto" data-waresId="{{item.waresId}}">
              <image src="{{item.logoUrl}}"></image>
            </view>
          </view>
        </view>
      </view>

      <!-- 商品详情列表 -->
      <view class="likes">
        <view class="conts" style="width:{{commoditylist.length*143}}rpx">
          <view class="block" bindtap="clik" wx:for="{{commoditylist}}" data-index="{{index}}" data-id="{{item.id}}" bindtap="productlist" wx:key="*this">
            <image wx:if="{{show}}" src="{{item.url}}"></image>
            <!-- <image wx:if="{{!show}}" src="../../static/imgs/美妆.png"></image> -->
            <text class=" {{index1==index?'color':''}}">{{item.name}}</text>
            <text class="i"></text>
          </view>

        </view>
      </view>
      <view class="contens">
        <view class="content">
          <view class="cont" wx:for="{{ productlist}}" wx:key="*this" bindtap="goto" data-waresId="{{item.waresId}}">

            <image src="{{item.logoUrl}}"></image>
            <view class="name pl20">{{item.waresName}}</view>
            <view class="content_client pl20">
              <text hidden="{{!item.advertising}}">{{item.advertising}}</text>
            </view>
            <view class="price pl20">￥
              <text class="nowprice">{{item.mallPrice}} </text>
              <text class="oldprice" hidden="{{!item.marketPrice}}">  ￥{{item.marketPrice}}</text>
            </view>
          </view>

          <!-- </block> -->
        </view>
      </view>
    </view>



  </view>
  <view class="weui-loadmore" hidden='{{!loading}}'>
    <view class="weui-loading"></view>
    <view class="weui-loadmore__tips">正在加载</view>
  </view>
  <view class="weui-loadmore weui-loadmore_line" hidden="{{hasNext}}">
    <view class="weui-loadmore__tips weui-loadmore__tips_in-line">到底了</view>
  </view>

</view>
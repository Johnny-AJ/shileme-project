  <view class="swiper_box">
    <swiper indicator-dots="false" autoplay="false" interval="3000" circular="false">
      <swiper-item wx:for="{{swiperList}}" wx:key='goods_id'>
        <image mode="widthFix" src="{{item.url}}"></image>
      </swiper-item>
    </swiper>
  </view>



page {
  background: #f5f5f5;
}

.bgc {
  width: 100%;
  height: 100%;
}

.bgc .kong_box {
  width: 100%;
  height: 457rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.bgc .kong_box .song {
  width: 100%;
  height: 72rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 0 29rpx;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  border-bottom: 1rpx solid #ccc;
}

.bgc .kong_box .song .s2 {
  font-weight: 400;
  color: rgba(240, 43, 80, 1);
}

.bgc .kong_box .jong {
  width: 100%;
  height: 210rpx;
  border-bottom: 1rpx solid #ccc;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.bgc .kong_box .jong  .imgs2 {
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid red;
}

.bgc .kong_box .jong  .cong {
  width: 510rpx;
  height: 100%;
}

.bgc .kong_box .jong  .cong .nav_box {
  display: flex;
  width: 100%;
  margin-top: -9rpx;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.bgc .kong_box .jong  .cong .nav_box .c1 {
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bgc .kong_box .jong  .cong .nac_box {
  display: flex;
  width: 100%;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.bgc .kong_box .song_box {
  width: 100%;

  
}
.bgc .kong_box .song_box  .s1{

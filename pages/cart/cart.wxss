/* pages/cart/cart.wxss */

/* 背景颜色 */

.bgc {
  background-color: #f5f5f5;
  width: 750rpx;
}

/* 购物车上部分 */

.shipping_car {
  height: 100rpx;
  width: 750rpx;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx 0 30rpx;
  margin-bottom: 20rpx;
}

text {
  font-size: 27rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.shipping_box {
  width: 560rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}

.shipping_box .text1 {
  font-size: 26rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  color: #fff;
  background-color: #f02b50;
  width: 180rpx;
  display: flex;
  padding-left: 24rpx;
  border-radius: 3rpx;
}

.shipping_car image {
  height: 27rpx;
  width: 17rpx;
}

/* 购物车上部分 */

/* 购物车下部分 */

.cart {
  width: 100%;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.cart_box {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 10rpx;
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.cart_box radio {
  padding: 110rpx 20rpx 180rpx 20rpx;
}

/* 图片 */

.cart_box image {
  height: 200rpx;
  width: 200rpx;
  margin: 30rpx 20rpx 100rpx 0;
  border-radius: 10rpx;
}

/* 内容 */

.cart_nav {
  width: 500rpx;
  box-sizing: border-box;
  margin: 30rpx 17rpx 30rpx 0;
}

.cart_nav .text1 {
  width: 416rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

.text2 {
  font-size: 26rpx;
  color: #999;
  font-family: PingFang SC;
  font-weight: bold;
  padding-top: 10rpx;
}

.cart_price {
  display: flex;
  width: 100%;
  height: 50rpx;
  justify-content: space-between;
  align-items: center;
  margin-top: 41rpx;
}

.cart_price .text3 {
  width: 200rpx;
}

.cart_price .text3  text {
  font-family: PingFang SC;
  font-weight: bold;
  font-size: 23rpx;
  color: rgba(240, 43, 80, 1);
}

.cart_price .text3  text text {
  font-size: 26rpx;
}

.cart_price .text4 {
  height: 50rpx;
  width: 208rpx;
  position: relative;
  z-index: 2;
}

.cart_price .text4 .imgs {
  width: 100%;
  height: 100%;
  margin: 0;
  z-index: -1;
  position: absolute;
}

.cart_price .text4 .img {
  height: 50rpx;
  width: 208rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart_price .text4 .img  view {
  width: 69.333rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart_price .text4 .img  view image {
  margin: 0;
}

.cart_price .text4 .img  view:nth-child(1) image {
  width: 14rpx;
  height: 3rpx;
}

.cart_price .text4 .img .add image {
  width: 14rpx;
  height: 14rpx;
}

.cart_price .text4 .img  input {
  width: 69.333rpx;
  height: 100%;
  justify-items: center;
  align-items: center;
  display: flex;
  font-size: 22rpx;
  text-align: center;
}

.cart_nav .text5 {
  width: 100%;
  display: flex;
  margin-top: 13rpx;
}

.cart_nav .text5  .tl {
  width: 76rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.cart_nav .text5  .tr {
  width: 370rpx;
}

.cart_nav .text5  .tr view {
  height: 44rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.cart_nav .text5  .tr view text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

/* 内容 */


/* 结算 */

.settlement {
  height: 98rpx;
  width: 750rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
  border-top: 1px solid #eaeaea;
  line-height: 98rpx;
}

.settlement radio {
  height: 98rpx;
  margin-left: 30rpx;
}

.settlement .heji {
  height: 32rpx;
  width: 172rpx;
  margin-left: 189rpx;
}

.settlement .text6 {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.settlement text {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(240, 43, 80, 1);
}

.settlement button {
  width: 190rpx;
  height: 70rpx;
  background: rgba(240, 43, 80, 1);
  border-radius: 35rpx;
  color: #fff;
  margin-top: 15rpx;
}

/* 结算 */

/* 推荐产品 */

.likes .conts {
  width: 750rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}

.likes .conts .cont image {
  width: 335rpx;
  height: 300rpx;
}

.likes .conts .cont {
  width: 335rpx;
  float: left;
  height: 500rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 9rpx;
}

.likes .conts .content {
  width: 750rpx;
  position: absolute;
  left: 0rpx;
  top: 111rpx;
  background: #f5f5f5;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.likes .conts .cont .name {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.likes .conts .cont .content_client {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-top: 12rpx;
  color: rgba(102, 102, 102, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.likes .conts .cont .price {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  width: 100%;
  margin-top: 12rpx;
  text-align: left;
  color: rgba(231, 86, 79, 1);
}

.likes .conts .cont .oldprice {
  text-decoration: line-through;
  margin-left: 15rpx;
}

.likes {
  padding-top: 1rpx;
  position: relative;
  background: #f5f5f5;
}


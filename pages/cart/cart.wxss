/* pages/cart/cart.wxss */

/* 背景颜色 */

.bgc {
  background-color: #f5f5f5;
  overflow: hidden;
  width: 100%;
}

/* 购物车上部分 */

.shipping_car {
  height: 100rpx;
  width: 750rpx;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx 0 30rpx;
  margin-bottom: 20rpx;
}

text {
  font-size: 27rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.shipping_box {
  width: 560rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}

.shipping_box .text1 {
  font-size: 26rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  color: #fff;
  background-color: #f02b50;
  width: 180rpx;
  display: flex;
  padding-left: 24rpx;
  border-radius: 3rpx;
}

.shipping_car image {
  height: 27rpx;
  width: 17rpx;
}

/* 购物车上部分 */

/* 购物车下部分 */

.cart {
  width: 100%;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.cart_box {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 10rpx;
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.cart_box  .cart-box_left {
  height: 81rpx;
  box-sizing: border-box;
  padding: 0 0%;
}

.cart_box  .cart-box_left image {
  width: 70rpx;
  height: 36rpx;
  margin: 0;
  border-radius: 0;
  margin-top: 110rpx;
}

.cart_box  .cart-box_left .checkout .wx-checkbox-input {
  margin-top: 110rpx;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

.cart_box .cart_nav .none {
  display: none;
}

.block {
  display: block;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  background: #f02b50;
  width: 60rpx;
  height: 60rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 图片 */

.cart_box .images {
  margin-top: 30rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.cart_box .images image {
  width: 100%;
  height: 100%;
}

/* 内容 */

.cart_nav {
  width: 463rpx;
  box-sizing: border-box;
  margin: 21rpx 10rpx 30rpx 0;
  padding-left: 20rpx;
}

.cart_nav .text1 {
  width: 416rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

.text2 {
  font-size: 26rpx;
  color: #999;
  font-family: PingFang SC;
  font-weight: bold;
}

.cart_nav  .state {
  height: 40rpx;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}

.cart_nav  .state text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(240, 43, 80, 1);
}

.cart_price {
  display: flex;
  width: 100%;
  height: 50rpx;
  justify-content: space-between;
  align-items: center;
}

.cart_price .text3 {
  width: 200rpx;
}

.cart_price .text3  text {
  font-family: PingFang SC;
  font-weight: bold;
  font-size: 23rpx;
  color: rgba(240, 43, 80, 1);
}

.cart_price .text3  text text {
  font-size: 26rpx;
}

.movable-area {
  height: 120rpx;
  width: calc(100vw - 120rpx);
}

movable-view {
  height: 120rpx;
  width: 100vw;
  background: #fff;
  z-index: 999;
}

.delete-btn {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  width: 120rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #fff;
  line-height: 120rpx;
  z-index: 1;
  background: #e66671;
  text-align: center;
}

.product-item {
  position: relative;
  width: 100vw;
  border-bottom: 2rpx solid #e9e9e9;
  box-sizing: border-box;
  background: #fff;
  /* z-index: 999; */
}

.product-item {
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
}

.cart_price .text4 {
  height: 50rpx;
  width: 270rpx;
  position: relative;
  z-index: 2;
}

.cart_price .text4 .inputs {
  width: 100%;
  height: 100%;
}

checkbox-group {
  background: #f5f5f5;
}

.checkbox {
  margin-top: 20rpx;
}

.cart_price .text4 .inputs .i-input-number {
  min-height: 36rpx;
}

.cart_price .text4 .inputs  .i-input-number-text {
  height: 24px;
  width: 36px;
  min-height: auto;
  font-size: 12px;
  line-height: 40px;
}

.cart_nav .text5 {
  width: 100%;
  display: flex;
  margin-top: 13rpx;
}

.cart_nav .text5  .tl {
  width: 76rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.cart_nav .text5  .tr {
  width: 370rpx;
}

.cart_nav .text5  .tr view {
  height: 34rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.cart_nav .text5  .tr view text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}


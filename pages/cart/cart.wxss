}

/* 购物车上部分 */

.shipping_car {
  height: 100rpx;
  width: 750rpx;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx 0 30rpx;
  margin-bottom: 20rpx;
}

text {
  font-size: 27rpx;
  font-family: PingFang SC;
  font-weight: bold;

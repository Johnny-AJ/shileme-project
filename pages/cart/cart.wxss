/* 结算 */

.settlement {
  height: 98rpx;
  width: 750rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
  border-top: 1px solid #eaeaea;
  line-height: 98rpx;
}

.settlement radio {
  height: 98rpx;
  margin-left: 30rpx;
}

.settlement .heji {
  height: 32rpx;
  width: 172rpx;
  margin-left: 189rpx;
}

.settlement .text6 {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.settlement text {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(240, 43, 80, 1);
}

.settlement button {
  width: 190rpx;
  height: 70rpx;
  background: rgba(240, 43, 80, 1);
  border-radius: 35rpx;
  color: #fff;
  margin-top: 15rpx;
}


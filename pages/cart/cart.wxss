/* pages/cart/cart.wxss */

/* 背景颜色 */

.bgc {
  background-color: #f5f5f5;
  width: 750rpx;
}

/* 购物车上部分 */

.shipping_car {
  height: 100rpx;
  width: 750rpx;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx 0 30rpx;
  margin-bottom: 20rpx;
}

text {
  width: 113rpx;
  font-size: 27rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.shipping_box {
  width: 560rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}

.shipping_box .text1 {
  font-size: 26rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  color: #fff;
  background-color: #f02b50;
  width: 180rpx;
  display: flex;
  padding-left: 24rpx;
  border-radius: 3rpx;
}

.shipping_car image {
  height: 27rpx;
  width: 17rpx;
}

/* 购物车上部分 */

/* 购物车下部分 */

.cart_box {
  height: 330rpx;
  width: 730rpx;
  border-radius: 10rpx;
  display: flex;
  margin-left: 10rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.cart_box radio {
  padding: 110rpx 20rpx 180rpx 20rpx;
}

/* 图片 */

.cart_box image {
  height: 200rpx;
  width: 200rpx;
  margin: 30rpx 20rpx 100rpx 0;
  border-radius: 10rpx;
}

/* 内容 */

.cart_nav {
  width: 500rpx;
  height: 246rpx;
  border: 1px solid skyblue;
  box-sizing: border-box;
  margin: 30rpx 17rpx 30rpx 0;
}

.cart_nav .text1 {
  width: 416rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

.text2 {
  font-size: 26rpx;
  color: #999;
  font-family: PingFang SC;
  font-weight: bold;
  padding-top: 10rpx;
}

.cart_price {
  display: flex;
  box-sizing: border-box;
  margin: 41rpx 20rpx 23rpx 0;
}

.cart_price .text3 {
  font-size: 26rpx;
  color: #f02b50;
  font-family: PingFang SC;
  font-weight: bold;
  margin: 0 93rpx 37rpx 0;
}

.cart_price .text4 {
  border: 1px solid skyblue;
  height: 50rpx;
  width: 208rpx;
}

.cart_nav .text5 {
  width: 425rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  border: 1px solid skyblue;
}

/* 内容 */

/* 购物车下部分 */


/* 购物车下部分 */

.cart {
  width: 100%;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.cart_box {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 10rpx;
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.cart_box  .cart-box_left{
  height: 81rpx;
  box-sizing: border-box;
  padding:  0 0%;
 

}
.cart_box  .cart-box_left image{
  width: 70rpx;
  height: 36rpx;
  margin: 0;
  border-radius: 0;
  margin-top: 110rpx;

}
.cart_box  .cart-box_left radio{
   margin-top: 110rpx;
   box-sizing: border-box;
padding-left: 10rpx;

}
/* 图片 */

.cart_box .images {
  margin-top: 30rpx;
  height: 200rpx;
  width: 200rpx;
  border-radius:10rpx;
  overflow: hidden;
 
}
.cart_box .images image{
  width: 100%;
  height: 100%;
}

/* 内容 */

.cart_nav {
  width: 463rpx;
  box-sizing: border-box;
  margin: 21rpx 10rpx 30rpx 0;
  padding-left: 20rpx;
}

.cart_nav .text1 {
  width: 416rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

.text2 {
  font-size: 26rpx;
  color: #999;
  font-family: PingFang SC;
  font-weight: bold;

}
.cart_nav  .state {
  height: 40rpx;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}
.cart_nav  .state text{
  font-size:22rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(240,43,80,1);
}
.cart_price {
  display: flex;
  width: 100%;
  height: 50rpx;
  justify-content: space-between;
  align-items: center;
 
}

.cart_price .text3 {
  width: 200rpx;
}

.cart_price .text3  text {
  font-family: PingFang SC;
  font-weight: bold;
  font-size: 23rpx;
  color: rgba(240, 43, 80, 1);
}

.cart_price .text3  text text {
  font-size: 26rpx;
}

.cart_price .text4 {
  height: 50rpx;
  width: 223rpx;
  position: relative;
  z-index: 2;
}
.cart_price .text4 .inputs{
  width: 100%;
  height: 100%
}
.cart_price .text4 .inputs .i-input-number{
  min-height: 36rpx;

}
.cart_price .text4 .inputs  .i-input-number-text{
  height: 24px;
width: 36px;
min-height: auto;
font-size: 12px;
line-height: 40px;

}

.cart_nav .text5 {
  width: 100%;
  display: flex;
  margin-top: 13rpx;
}

.cart_nav .text5  .tl {
  width: 76rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.cart_nav .text5  .tr {
  width: 370rpx;
}

.cart_nav .text5  .tr view {
  height: 34rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.cart_nav .text5  .tr view text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}


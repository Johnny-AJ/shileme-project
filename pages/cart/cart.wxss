/* 推荐产品 */

.conts {
  width: 750rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  padding-top: 1rpx;
  background: #f5f5f5;
}

.conts .cont image {
  width: 335rpx;
  height: 300rpx;
}

.conts .cont {
  width: 335rpx;
  height: 500rpx;
  background: #fff;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.conts .content {
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  background: #f5f5f5;
  box-sizing: border-box;
  align-items: space-between;
  margin: -20rpx 0 0 -10rpx;
  padding-bottom: 120rpx;
}

.pl20 {
  box-sizing: border-box;
  padding-left: 10rpx;
}

.conts .cont .name {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.conts .cont .content_client {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-top: 12rpx;
  color: rgba(102, 102, 102, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.conts .cont .price {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(231, 86, 79, 1);
}

.conts .cont .price .nowprice {
  font-size: 24rpx;
  color: rgba(231, 86, 79, 1);
}

.settlement ::-webkit-scrollbar {
  display: none;
}

.settlement .button {
  width: 190rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(240, 43, 80, 1);
  border-radius: 35px;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  margin-left: 22rpx;
  color: rgba(255, 255, 255, 1);
}


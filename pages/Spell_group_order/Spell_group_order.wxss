/* pages/Spell_group_order/Spell_group_order.wxss */

.big_box {
  width: 750rpx;
  height: 202rpx;
  box-sizing: border-box;
  padding-bottom: 50rpx;
  border-top: 4rpx solid #f5f5f5;
}

.big_box .flex_box {
  display: flex;
  height: 100%;
  width: 100%;
  align-items: center;
}

.big_box .top_box {
  width: 668rpx;
  height: 144rpx;
  box-sizing: border-box;
  margin: 30rpx;
}

.top_box .t1 {
  font-size: 30rpx;
  font-family: PingFang SC;
  color: rgba(34, 34, 34, 1);
}

.top_box .t1 text {
  width: 70rpx;
  height: 40rpx;
  background: rgba(240, 43, 80, 1);
  border-radius: 5rpx;
  color: #fff;
  font-size: 23rpx;
}

.top_box .t2 {
  font-size: 30rpx;
  font-family: PingFang SC;
  color: rgba(240, 43, 80, 1);
}

.big_box image {
  height: 35rpx;
  width: 22rpx;
  margin-right: 30rpx;
}

.flex1_box .imgs1 {
  width: 100%;
  height: 4rpx;
  margin-bottom: 32rpx;
}

/* ------------------------------ */

.body_box {
  width: 100%;
}

text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

/* ------------ */

.conts {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}

.conttent .conts .state {
  height: 72rpx;
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(240, 43, 80, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.conttent .conts .state .time {
  font-size: 30rpx;
  color: rgba(34, 34, 34, 1);
}

.cont {
  width: 100%;
  padding: 30rpx 0 20rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.cont .imgs {
  width: 170rpx;
  height: 180rpx;
  margin-left: 30rpx;
}

.cont .imgs image {
  width: 100%;
  height: 100%;
}

.cont .cr {
  width: 530rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.cont .cr  .name  .price {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.cont .cr .name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cont .cr  .spec {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cont .cr  .spec text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
}

.cont .cr  .spec .t2 {
  font-size: 26rpx;
  color: rgba(34, 34, 34, 1);
}

.cont .cr  .spec .t2 text {
  font-size: 22rpx;
  margin-left: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.cont .cr  .gifts {
  display: flex;
  width: 100%;
  margin-top: 30rpx;
}

.cont .cr  .gifts .gl {
  width: 60rpx;
  height: 25rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.cont .cr  .gifts  .num {
  width: 460rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.cont .cr  .gifts  .num .nums {
  display: flex;
  width: 460rpx;
  justify-content: space-between;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  align-items: center;
}

.cont .cr  .gifts  .num .nums text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  display: inline-block;
  color: rgba(34, 34, 34, 1);
}

.cont .cr  .gifts  .num .nums text:nth-child(1) {
  width: 410rpx;
}

.cont .cr  .gifts  .num .nums text:nth-child(2) {
  font-size: 18rpx;
  width: 30rpx;
}

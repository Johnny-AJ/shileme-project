.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.75);
  display: none;
}
.zan-dialog--show{
  position: relative;
}
.zan-dialog__container {
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  /* height: 600rpx; */
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  box-shadow: 0px 3px 3px 2px gainsboro;

  padding-bottom: 178rpx
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
  background: #fff;
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}
.zan-dialog--show .zan-dialog__container .imgs{
  width: 61rpx;
  height: 61rpx;
  position: absolute;
  top: -122rpx;
  left: 50%;
  transform: translateX(-50%)


}
.zan-dialog--show .zan-dialog__container .imgs image{
  height: 100%;
  width: 100%
}
.show1 .zan-dialog__container {
  transform: translateY(0);
  background: #fff;
}

.show1 .zan-dialog__mask {
  display: block;
}

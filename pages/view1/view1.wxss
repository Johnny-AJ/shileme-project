.view {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
}
.view .cont{
  margin-top: 109rpx;
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;

 
}
.view .cont text {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.view .cont .imgs {
  width: 210rpx;
  height: 175rpx;
}

.view .cont .imgs image {
  width: 100%;
  height: 100%;
}

.view .cont1 {
  margin-top: 60rpx;
  text-align: center;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 0 90rpx;

}

.view .cont1 view {
  width: 240rpx;
  height: 78rpx;
  border:1px solid rgba(153,153,153,1);
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:32rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(34,34,34,1);
}
.view .cont2{
  margin-top: 60rpx;
}
.view .cont1 .color {
  width: 240rpx;
  height: 78rpx;
background:rgba(240,43,80,1);
border: none;
  border-radius: 10rpx;
color:rgba(255,255,255,1);
}

/* pages/shipping/shipping.wxss */

/* 背景颜色 */

.bgc {
  /* background-color: #f5f5f5; */
  background-color: #f5f5f5;
  height: 1206rpx;
  width: 750rpx;
  overflow: hidden;
}

.p30 {
  box-sizing: border-box;
  padding: 0 30rpx;
}

.address_box {
  height: 264rpx;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #f3f3f3;
  margin-bottom: 20rpx;
}

/* 文本 */

.address_box .name_box {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  height: 90rpx;
  align-items: center;
  padding-right: 29rpx;
  font-size: 29rpx;
  color: #222;
  padding-bottom: 61rpx;
  padding-top: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

/* 地址 */

.address_box .shipping_address {
  font-size: 27rpx;
  color: #666;
  padding-bottom: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.address_box .address_nav {
  border-top: 1px solid #f3f3f3;
  display: flex;
  justify-content: space-between;
}

.address_box .address_radio {
  width: 160rpx;
  padding: 29rpx 0 29rpx 0;
  font-size: 25rpx;
  color: #666;
}

.address_nav .address_bianji image {
  height: 26rpx;
  width: 26rpx;
  margin-right: 14rpx;
  align-content: center;
}

.address_nav .address_right {
  width: 244rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

/* 按钮 */

.button {
  width: 690rpx;
  height: 88rpx;
  background: rgba(240, 43, 80, 1);
  border-radius: 10px;
  font-size: 32rpx;
  color: #fff;
  position: fixed;
  bottom: 50rpx;
  left: 30rpx;
  text-align: center;
  line-height: 88rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

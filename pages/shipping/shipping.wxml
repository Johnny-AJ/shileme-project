<!--pages/shipping/shipping.wxml-->

<!-- 背景有颜色 -->
<view class="bgc">

  <view class="address_box">

    <view class="name_box p30">
      <text>花礼晴</text>
      <text>13923856789</text>
    </view>

    <view class="shipping_address p30">
      广东省广州市天河区长湴工业园13号
    </view>

    <view class="address_nav p30">

      <view class="address_radio">
        <radio-group class="radio-group" bindchange="radioChange">
          <radio>默认地址</radio>
        </radio-group>
      </view>

      <view class="address_right">

        <view class="address_bianji" bindtap="handurl" data-url="/pages/inetAddress/inetAddress">
          <view>
            <image src="../../static/imgs/编辑.png"></image>
            <text>编辑</text>
          </view>
        </view>

        <view class="address_bianji" bindtap="handdel">
          <view>
            <image src="../../static/imgs/删除.png"></image>
            <text>删除</text>
          </view>
        </view>
      </view>

    </view>
  </view>

  <!-- 按钮 -->
  <view class="button" bindtap="handurl" data-url="/pages/inetAddress/inetAddress">
    <text>新建地址</text>
  </view>
</view>
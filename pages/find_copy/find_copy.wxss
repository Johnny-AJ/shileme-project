/* pages/find_copy/find_copy.wxss */

.bgc {
  width: 750rpx;
  height: 2214rpx;
  background-color: skyblue;
  overflow: hidden;
}

/* 轮播 */

.swiper_box {
  width: 750rpx;
  height: 340rpx;
}

.swiper_box swiper {
  width: 750rpx;
  height: 340rpx;
}

.swiper_box swiper image {
  width: 100%;
  height: 100%;
}

/* tab栏 */

.tuijian {
  width: 750rpx;
  height: 129rpx;
  background-color: #f5f5f5;
  position: relative;
}

.tuijian .imgs1 {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
}

.tuijian .imgs1 image {
  width: 690rpx;
  height: 16rpx;
}

.t_box {
  position: absolute;
  top: 20rpx;
  left: 160rpx;
  text-align: center;
}

.t_box .t1 {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.t_box .t2 {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
}

.tuijian .t3 {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(240, 43, 80, 1);
  position: absolute;
  top: 20rpx;
  right: 167rpx;
}

/* 图片布局 */

.photo_box {
  width: 690rpx;
  height: 460rpx;
  border: 1px solid red;
  box-sizing: border-box;
  margin: 0 30rpx;
  display: flex;
}

.photo_box .left_box {
  width: 330rpx;
  height: 430rpx;
  background: rgba(255, 255, 255, 1);
  opacity: 0.77;
  border-radius: 10rpx;
  border: 1px solid black;
  margin-right: 30rpx;
}

.photo_box .right_box {
  width: 330rpx;
  height: 460rpx;
  background: rgba(255, 255, 255, 1);
  opacity: 0.77;
  border-radius: 10rpx;
  border: 1px solid blue;
}

.left_box .imgs2 image {
  width: 330rpx;
  height: 300rpx;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}

.left_box .left_box_nav {
  width: 330rpx;
  height: 130rpx;
}

.left_box_nav .l1 {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  margin: 20rpx 0 0 20rpx;
}


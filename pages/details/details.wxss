@import '../scango/scango.wxss';

.operation {
  width: 750rpx;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.operation .ol {
  width: 340rpx;
  height: 100%;
  float: left;
  display: flex;
  box-sizing: border-box;
  padding: 0 30rpx;
  justify-content: space-between;
}

.operation .ol view {
  display: flex;
  width: 93.333%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.operation .ol view .select {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(240, 43, 80, 1);
}

.operation .ol view  text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.operation .ol view image {
  width: 38rpx;
  height: 38rpx;
}

.operation .or {
  width: 410rpx;
  height: 100%;
  float: left;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.operation .or view {
  width: 190rpx;
  height: 70rpx;
  position: relative;
  text-align: center;
  line-height: 70rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.operation .or view image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  left: 0;
}

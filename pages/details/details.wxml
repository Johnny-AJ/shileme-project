<!-- 扫码购物 -->
<view class="scango">
  <view class="scgheade">
    <view class="slideshow">
      <swiper class="swipers" autoplay="true" interval="3000" duration="2000" circular="true"  indicator-active-color="#F02B50" indicator-dots="true" current="{{currentSwiper}}" bindchange="swiperChange">
        <block wx:for="{{list.images}}" wx:key="*this">
          <swiper-item>

            <image src="{{item}}" class="slide-image" width="100%" height="150"></image>


          </swiper-item>
        </block>
      </swiper>
      <!-- 重置小圆点的样式  --> 
     <view class="dots">
        <block wx:for="{{imgUrls}}" wx:key="*this">
          <view class="dot{{index == currentSwiper ? ' active' : ''}}"></view>
        </block>
      </view> 

    </view>

    <view class="scgtxt">

      <view class="title">{{list.name}}</view>
      <view class="cont">{{list.advertising}}</view>
      <view class="price">
        <text class="newprice">￥<text>{{list.mallPrice}}</text></text>
        <text class="oldprice">￥<text wx:if="{{list.marketPrice}}">{{list.marketPrice}}</text><text wx:if="{{!list.marketPrice}}">{{list.mallPrice}}</text> </text>
      </view>

    </view>



  </view>

  <view class="after">
    <view class="bz">
      <image src="http://192.168.2.98:9095//scango/icon.png"></image>
      <text>正品保证</text>
    </view>
    <view class="bz">
      <image src="http://192.168.2.98:9095//scango/icon.png"></image>
      <text>精选商品</text>
    </view>
    <view class="bz">
      <image src="http://192.168.2.98:9095//scango/icon.png"></image>
      <text>门店体验</text>
    </view>

  </view>

  <view class="discounts">

    <view class="lj" bindtap="toggleDialog" hidden="{{getListByWaresId.length==0}}">
      <view class="title">领劵</view>
      <view class="ljcont">

        <view wx:for="{{getListByWaresId1}}" wx:key="*this">{{item.name}}</view>

      </view>
      <image src="http://192.168.2.98:9095//scango/矩形 16(1).png"></image>
    </view>

    <view class="lj" bindtap="toggleDialog1">
      <view class="title">选择</view>
      <view class="xzcont">
        <text wx:if="{{selectedProp.length}}">{{selectedProp.length>0?selectedProp+'，':selectedProp}}{{value1+'件'}}</text>
      </view>
      <image src="http://192.168.2.98:9095//scango/矩形 16(1).png"></image>
    </view>

  </view>
  <view>{{index111}}</view>
  <view>{{index222}}</view>
  <view class="comment" hidden="{{getcommentList.length==0}}">
    <view class="title" bindtap="gotcommentList" data-waresId="{{waresId}}" >
      <view class="conts">宝贝评价（{{totalCount}}） </view>
      <view class="more">查看更多
        <image src="http://192.168.2.98:9095//scango/矩形 16 拷贝.png"></image>
      </view>
    </view>
    <view class="pj"  hidden="{{getcommentList.length==0}}">

      <view class="tbottom">
        <view class="tblog" style="width:{{getcommentList.length*626}}rpx">
        
            <view class="pl" wx:for="{{getcommentList}}" wx:key="*this"  bindtap="gotcommentList" data-waresId="{{waresId}}">
              <view class="head">
                <image src="{{item.userImg}}"   wx:if="{{typeof(item.userImg)!='undefined'}}"></image>
                <image src="http://192.168.2.98:9095//scango/椭圆 4.png"  wx:if="{{typeof(item.userImg) =='undefined'}}"></image>
              </view>
              <view class="cont">
                <text class="name"  wx:if="{{typeof(item.userName)=='undefined'}}">匿名</text>
                  <text class="name" wx:if="{{item.userName}}">{{item.userName}}</text>

                <text class="time">{{item.createTime}}</text>
                <view class="textcont">
                 {{item.commentInfo}}
                </view>
              </view>
              <view class="imsg">
                <image src=" {{item.images[0]}}"></image>
                <text wx:if="{{item.images.length>1}}">{{item.images.length}}</text>
              </view>
            </view>
     
        
        </view>
      </view>
    </view>

  </view>
  <view class="table">
    <view class="titile">
      <view></view>
      <text>商品信息</text>
      <view></view>
    </view>
    <view class="contentTitle">{{contentTitle}}</view>
    <view class="contents" wx:for="{{list.content}}" wx:key='*this'>

      <image src="{{item}}"></image>
    </view>

  </view>
  <view class="or">
    <view class="or-left">
      <view bindtap="goback">
        <image src="../../static/imgs/矢量智能对象.png"></image>
        <text class="color">首页</text>

      </view>
      <view  data-waresId="{{waresId}}" bindtap="defined" wx:if="{{isCollect ==1}}">
        <image src="http://192.168.2.98:9095//imgs/形状 1.png"></image>
        <text>收藏</text>
      </view>
      <view  data-waresId="{{waresId}}" bindtap="deleteByWaresId"  wx:if="{{isCollect ==0}}">
        <image src="../../static/imgs/形状 1.png"></image>
        <text class="color">收藏</text>
      </view>
      <view bindtap="goto">
        <image src="../../static/imgs/购物车.png"></image>
        <text>购物车</text>

      </view>
    </view>
    <view class="cart"  bindtap="addcart"  data-waresId="{{waresId}}" data-propertyId="{{defaultSku.skuid?defaultSku.skuid:''}}" data-amount="{{value1}}" >
      <image src="http://192.168.2.98:9095//imgs/矩形 29 拷贝 2.png" ></image>加入购物车</view>
    <view class="nowbuy" bindtap="buys" data-waresId="{{waresId}}" data-propertyId="{{defaultSku.skuid}}" data-amount="{{value1}}">
      <image src="http://192.168.2.98:9095//imgs/矩形 29 拷贝 3.png"></image>立即购买</view>
  </view>
   <!-- <view class="buy" bindtap="buys" data-waresId="{{waresId}}" data-propertyId="{{defaultSku.skuid}}" data-amount="{{value1}}">立即购买</view> -->


  <!-- 领劵弹出层 -->
  <view class="zan-dialog {{ showDialog ? 'zan-dialog--show' : '' }}">
    <!-- <view class="zan-dialog  zan-dialog--show"> -->
    <view class="zan-dialog__mask" />
    <view class="zan-dialog__container">
      <view class="imgs">
        <image src="http://192.168.2.98:9095//scango/关闭icon.png" bindtap="toggleDialog"></image>
      </view>
      <view class="conts">
        <view class="title"> 优惠劵 </view>
        <view class="coupon">
          <view class="cont" wx:for="{{getListByWaresId}}" wx:key="*this">
            <image src="http://192.168.2.98:9095//scango/组 4.png"></image>
            <view class="cl">
              <text class="t1">￥{{item.money}}</text>
              <text class="t2">满{{item.startMoney}}元可用</text> {{itme.id}}
            </view>
            <view class="cr">
              <view class="rt">
                <text class="t1">{{item.name}}</text>
                <text class="t2" wx:if="{{item.isGet==1}}" data-id="{{item.id}}" bindtap="getDiscountById">领取</text>
                <text class="t3" wx:if="{{item.isGet==0}}">已领取</text>
              </view>
              <view class=" rb ">
                <text class="t1 ">适用平台：{{item.text}}</text>
                <text class="t2 ">有效期至：{{item.endDate}}</text>
              </view>
            </view>
          </view>

        </view>
        <!-- <view class="coupon1">
          <image src="http://192.168.2.98:9095//imgs/组 7.png"></image>
          <text>功能暂未开放,敬请期待!</text>
        </view> -->
      </view>
    </view>
  </view>

  <!-- 选择弹出层 -->
  <view class="popup {{ showDialog1 ? 'show1' : '' }}">
    <!-- <view class="popup show1"> -->

    <view class="zan-dialog__mask" bindtap="toggleDialog1" />
    <view class="zan-dialog__container">
      <view class="conts">
        <view class="trade">
          <view class="imags">
            <image src="{{defaultSku.imgUrl?defaultSku.imgUrl:pic}}"></image>
          </view>
          <view class="tcont">
            <view class="name">{{list.name}}</view>
            <view class="prcie">￥<text>{{defaultSku.price?defaultSku.price:list.mallPrice}}</text></view>
             <view class="repertory">库存：<text>{{defaultSku.repertory}}</text></view>
            <view class="text"> <text>已选:</text> {{selectedProp.length>0?selectedProp+'，':selectedProp}} <text hidden="{{selectedProp.length==0}}">{{value1}} 件</text></view>
           
             <view class="text">每人限购{{astrictNum}}件</view>
          </view>
        </view>
        <view class="spec ">

          <block wx:for="{{skuGroup}}" wx:for-index="key" wx:for-item="value" wx:key='*this'>
            <view class="thead">{{key}}</view>
            <view class="cont">
              <block wx:for="{{value}}" wx:key='*this'>
                <text class=".text {{wxs.array_contain(selectedProp,item)?'checkout':''}} {{['dashed',''][wxs.props_contain(allProperties,selectedPropObj,key,item,propKeys)]}}" bindtap="toChooseItem" data-key="{{key}}" data-val="{{item}}">{{item}}</text>
              </block>
            </view>
          </block>

        </view>

        <view class="num">

          <text>数量</text>
          <view class="totalizer">
            <i-input-number value="{{ value1 }}" i-class="inputs" min="1" max="100" bindchange="handleChange1" />
          </view>

        </view>
        <view class="next" bindtap="toggleDialog1">下一步</view>

      </view>
    </view>
  </view>


</view>
<wxs module="wxs" src="../../wxs/number.wxs" />

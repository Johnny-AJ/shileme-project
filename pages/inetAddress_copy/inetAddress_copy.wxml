<!--pages/inetAddress/inetAddress.wxml-->

<!-- 背景颜色 -->

<view class="bgc">

  <view class="username">
    <text>姓名：</text>
    <input name="name" class="weui-input" type="text" bindinput="handuserName" value="{{name}}" />
  </view>

  <view class="username">
    <text>手机号：</text>
    <input name="number" maxlength="11" bindinput="handNumber" value="{{phone}}" />
  </view>

  <picker mode="region" bindchange="bindRegionChange" custom-item="{{customItem}}" class="username p30">
    <text>省/市/区：</text>
    <!-- <input type="text" placeholder="选择所在地区"></input> -->
    <view name="RectRegion" class="picker">{{province}}{{city}}{{region}}</view>
    <!-- <view name="RectRegion" class="picker" value="{{id.province}}"></view> -->
  </picker>

  <view class="username">
    <text>收货地址:</text>
    <input name="address" bindinput="handAddress" value="{{address}}" />
  </view>

    <view class="change">
        <image src="http://192.168.2.98:9095//imgs/椭圆 1.png" hidden="{{isDefault==0}}" bindtap="change"></image>
         <image src="http://192.168.2.98:9095//imgs/组 26.png" hidden="{{isDefault==1}}" bindtap="change"></image>
        <text>设为默认地址</text>
    
    </view>
  

  <!-- 按钮 -->
  <!-- <view class="button" bindtap="handurl" data-url="/pages/shipping/shipping"> -->
  <view class="button" bindtap="handtap">
    <!-- <button>保存</button> -->
    <button>编辑完成</button>
  </view>

</view>
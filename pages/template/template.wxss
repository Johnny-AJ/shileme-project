.skuBox {
  height: 800upx;
  overflow-y: scroll;
}

.title {
  font-size: 0.8rem;
}

.color {
  height: 200upx;
  border-bottom: 1upx solid rgba(0,0,0,0.1);
}

.color_item {
  margin-right: 35upx;
  margin-bottom: 20upx;
  position: relative;
  width: 120upx;
  text-align: center;
  border: 1upx solid #444;
  line-height: 1.1rem;
  font-size: 0.7rem;
  border-radius: 10upx;
}

.color_item_container {
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: start;
  margin-top: 40upx;

 
}
 .active {
    background: peachpuff;
    border: 1upx solid #e94d68;


.page {
  width: 100%;
  height: 100vh;
}
 
/* 文本视图 */
 
.textview {
  position: relative;
  width: 100%;
  font-size: 30rpx;
  height: 260rpx;
  text-align: center;
  background-color: #f5f5f5;
  padding-top: 10rpx;
}
 
/* 顶部输入文本视图 */
 
.weui-textarea {
  width: 96%;
  text-align: left;
  display: inline-block;
  height: 260rpx;
  background-color: #f5f5f5;
}
 
/* 上传图片 */
 
.pic_view {
  position: relative;
  width: 100%;
  height: 100%;
}
 
/* 图片容器样式 */
 
.weui-uploader__file {
  float: left;
  margin-top: 9px;
}
 
/* 上传的图片大小 */
 
.weui-uploader__img {
  display: block;
  width: 200rpx;
  height: 180rpx;
  margin: 6rpx 15rpx;
  border: 1rpx solid #ccc;
}
 
/* 上传图片uload */
 
.weui-uploader__input-box {
  position: relative;
  width: 200rpx;
  top: 27rpx;
  left: 10rpx;
  height: 180rpx;
  border: 1px solid #d9d9d9;
  background-color: #f5f5f5;
  display: inline-block;
}
 
/* uload样式 */
 
.weui-uploader__input-box:before, .weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  width: 100%;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
 
/* uload样式 */
 
.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
 
/* uload样式 */
 
.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
 
/* uload样式 */
 
.weui-uploader__input-box:active:before, .weui-uploader__input-box:active:after {
  background-color: #999;
}

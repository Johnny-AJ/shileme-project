/* 查看商品 */

.price {
  width: 100%;
  height: 120rpx;
  position: relative;
  z-index: 2;
}

.price image {
  width: 750rpx;
  height: 120rpx;
  position: absolute;
  z-index: -1;
}

.price_left1 {
  width: 290rpx;
  height: 90rpx;
}

.price_left1 .price_top {
  display: flex;
  width: 100%;
  height: 60rpx;
  align-items: center;
  justify-content: center;
}

.price_left1 .price_bottom {
  width: 127rpx;
  height: 40rpx;
  border: 2px solid rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin-top: 5rpx;
}

.price_top .t2 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-decoration: line-through;
  color: rgba(255, 255, 255, 1);
  width: 66rpx;
  height: 22rpx;
}

.price_top .t3 {
  width: 175rpx;
  height: 26rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-left: 19rpx;
}

.price_left .t1 {
  font-size: 50rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-left: 27rpx;
}

.price .price_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price .price_box .price_right {
  width: 186rpx;
  height: 70rpx;
  background-color: #fff;
  color: red;
  font-size: 28rpx;
  line-height: 70rpx;
  border-radius: 45rpx;
  text-align: center;
  margin-top: 25rpx;
  margin-right: 30rpx;
}

.price_box .price_left {
  text-align: center;
}


<!--pages/inetAddress/inetAddress.wxml-->

<!-- 背景颜色 -->

<view class="bgc">

  <view class="username">
    <text>姓名：</text>
    <input name="name" class="weui-input" type="text" bindinput="handuserName" placeholder="收货人姓名" value="{{inputuserName}}" />
  </view>

  <view class="username">
    <text>手机号：</text>
    <input name="number" maxlength="11" bindinput="handNumber" placeholder="收货人手机号" value="{{inputNumber}}"></input>
  </view>

  <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}" class="username p30">
    <text>省/市/区：</text>
    <!-- <input type="text" placeholder="选择所在地区"></input> -->
    <view name="RectRegion" class="picker">{{region[0]}} {{region[1]}} {{region[2]}}</view>
  </picker>

  <view class="username">
    <text>收货地址:</text>
    <input name="address" bindinput="handAddress" placeholder="详细地址，如街道，楼盘号等" value="{{inputAddress}}"></input>
  </view>

  <radio-group bindchange="handradio" class="inetAddress">
    <radio></radio>
    <text>设为默认地址</text>
  </radio-group>

  <!-- 按钮 -->
  <!-- <view class="button" bindtap="handurl" data-url="/pages/shipping/shipping"> -->
  <view class="button" bindtap="handtap">
    <!-- <button>保存</button> -->
    <button>保存</button>
  </view>

</view>
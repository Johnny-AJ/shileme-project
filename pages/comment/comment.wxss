.comment{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
 
}
.comment .label{
   padding: 11rpx 31rpx 5rpx;
   width: 100%;
  position: relative;
  box-sizing: border-box;
}
.comment .label .lcont {
  width: 100%;
  position: relative;
  left: -10rpx;
  transition: height 1s linear 1s;
}
.label .open{
  height: 200rpx;
  overflow: hidden;
  transition: height 1s linear 1s;
}
.comment .label .lcont  text{
  padding:  12rpx 35rpx;
  border:1px solid rgba(204,204,204,1);
  border-radius:25px;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: inline-block;
  font-size:26rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(34,34,34,1);

}
.comment .label .lcont  .checked{
background:rgba(253,242,246,1);
border:1px solid rgba(240,43,80,1);
color:rgba(240,43,80,1);
}
.comment .label .imgs{
  height: 106rpx;
  width: 100%;

 position: relative

}
.comment .label .imgs .show1{
  display: block;
} 
.comment .label .imgs .close1{
  display: none;
} 
.comment .label .imgs .isopen{
  position: absolute;
  width: 32rpx;
  height: 18rpx;
  left: 50%;
  top: 50rpx;
  transform: translate(-50%,-50%)
}
.comment .label .imgs .isopen image{
  width: 100%;
  height: 100%;
}
.conts{

  width: 100%;

  box-sizing: border-box;
  padding: 0 17rpx 0 31rpx;

}
.conts .pj{
  position: relative;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 34rpx 0 20rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);


}
.conts .pj .head{
  height: 60rpx;
  width: 60rpx;

}
.conts .pj .head image{
  width: 100%;
  height: 100%;
}
.conts .pj .pr{
  width: 621rpx;
 
}
.conts .pj .pr text{
  display: block;
}
.conts .pj .pr  .name{
  font-size:30rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(34,34,34,1);
}
.conts .pj .pr  .time{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(153,153,153,1); 



}
.conts .pj .pr  .text{
font-size:28rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(34,34,34,1);
width: 100%;
display: -webkit-box;
overflow: hidden;
word-wrap: break-word;
white-space: normal !important;
-webkit-box-orient: vertical;

}
.conts .pj .pr  .text text{
  display: inline;
  color: #999999
}
.conts .pj .pr  .text .s1{
  display: none
}
.conts .pj .pr  .spread{
  -webkit-line-clamp: 20;
}
.conts .imgshow{
  width: 101%;
  margin-top: 15rpx;
  margin-left: -29rpx;

}
.conts .imgshow image{

        <image src="../../static/imgs/矩形 3.png"></image>
        <view class="name pl20">保湿急救 网红蓝药丸面.</view>
        <view class="content_client pl20">Dr.Jart 宛若新生保湿面膜.</view>
        <view class="price pl20">￥
          <text class="nowprice">79 </text>

        </view>
      </view>


    </view>
  </view>




  <!-- 结算 -->
  <view class="settlement">

    <radio>全部</radio>

    <view class="heji">
      <view class="text6">合计：
        <text>￥{{totalPrice}}</text>
      </view>
    </view>

    <view class="button" bindtap="handurl" data-url="/pages/Spell_group_order/Spell_group_order">去结算</view>
  </view>
</view>
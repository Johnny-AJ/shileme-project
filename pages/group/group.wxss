/* 背景 */

.bgc {
  width: 750rpx;
  height: 1470rpx;
  background-color: skyblue;
  overflow: hidden;
}

/* 大图 */

.bgc .img {
  width: 100%;
}

.bgc .img image {
  width: 750rpx;
  height: 500rpx;
  padding-bottom: 20rpx;
}

/* 小图 */

.bgc .img1 {
  width: 100%;
}

.bgc .img1 image {
  width: 100%;
  height: 200rpx;
  padding-bottom: 20rpx;
}


/* 拼团 */

.group_box {
  height: 90rpx;
  width: 730rpx;
  box-sizing: border-box;
  margin: 0 10rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.group_box .group_nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 90rpx;
  margin: 0 20rpx;
}

.group_box .group_nav image {
  width: 140rpx;
  height: 31rpx;
}

.group_box .group_nav .t2 {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(240, 43, 80, 1);
}


/* pages/indent/indent.wxss */

.p30 {
  box-sizing: border-box;
  padding: 0 30rpx;
}
page{
  background: #f5f5f5
}
.indent {
  width: 100%;

  margin: 0;
  padding: 0;
  background: #f5f5f5;
}

.indent  .checktbs {
  height: 90rpx;
  width: 100%;
}

.indent .tabs {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  height: 91rpx;
  display: flex;
  background: #fff;
  align-items: center;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  border: none !important;
}

.conttent {
  width: 100%;
  padding-bottom: 26rpx;
}

.conttent .conts {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}

.conttent .conts .state {
  height: 72rpx;
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(240, 43, 80, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.conttent .conts .state .time {
  font-size: 30rpx;
  color: rgba(34, 34, 34, 1);
}

.cont {
  width: 100%;
  padding: 30rpx 0 20rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.cont .imgs {
  width: 170rpx;
  height: 180rpx;
  margin-left: 30rpx;
}

.cont .imgs image {
  width: 100%;
  height: 100%;
}

.cont .cr {
  width: 530rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.cont .cr  .name  .price {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.cont .cr .name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cont .cr  .spec {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cont .cr  .spec text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
}

.cont .cr  .spec .t2 {
  font-size: 26rpx;
  color: rgba(34, 34, 34, 1);
}

.cont .cr  .spec .t2 text {
  font-size: 22rpx;
  margin-left: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.cont .cr  .gifts {
  display: flex;
  width: 100%;
  margin-top: 30rpx;
}

.cont .cr  .gifts .gl {
  width: 60rpx;
  height: 25rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.cont .cr  .gifts  .num {
  width: 460rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.cont .cr  .gifts  .num .nums {
  display: flex;
  width: 460rpx;
  justify-content: space-between;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  align-items: center;
}

.cont .cr  .gifts  .num .nums text {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  display: inline-block;
  color: rgba(34, 34, 34, 1);
}

.cont .cr  .gifts  .num .nums text:nth-child(1) {
  width: 410rpx;
}

.cont .cr  .gifts  .num .nums text:nth-child(2) {
  font-size: 18rpx;
  width: 30rpx;
}

.payment {
  width: 100%;
  padding-bottom: 20rpx;
}

.payment  .number {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  text-align: right;
  box-sizing: border-box;
  padding-right: 28rpx;
}

.payment  .number text {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.payment  .number .t2 {
  font-size: 28rpx;
  margin-left: 5rpx;
}

.payment  .number .price {
  font-size: 26rpx;
  color: rgba(240, 43, 80, 1);
}

.payment  .number .price text {
  color: rgba(240, 43, 80, 1);
  font-size: 28rpx;
}

.payment   .way {
  width: 100%;
  display: flex;
  height: 60rpx;
  align-items: center;
  flex-direction: row-reverse;
}

.payment   .way  text {
  width: 160rpx;
  height: 60rpx;
  border: 1rpx solid rgba(102, 102, 102, 1);
  border-radius: 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
  text-align: center;
  line-height: 60rpx;
  margin-left: 30rpx;
}

.payment   .way   .color {
  border: 1rpx solid rgba(240, 43, 80, 1);
  color: rgba(240, 43, 80, 1);
}
